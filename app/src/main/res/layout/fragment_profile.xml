<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_register">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/playfair_display_regular"
        android:text="Mi perfil"
        android:textAlignment="center"
        android:textColor="@color/secondary"
        android:textSize="24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/title"
        android:layout_alignBottom="@+id/line"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/containerSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Nombre"
                android:textColor="@color/secondary"
                android:textSize="20dp"
                android:fontFamily="@font/dm_sans_regular"/>

            <TextView
                android:id="@+id/title_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Correo"
                android:textColor="@color/subheadings"
                android:textSize="18dp"
                android:fontFamily="@font/dm_sans_regular"/>

            <TextView
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="correo"
                android:textColor="@color/text_dark"
                android:fontFamily="@font/dm_sans_regular"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/title_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Celular"
                android:textColor="@color/subheadings"
                android:textSize="18dp"
                android:fontFamily="@font/dm_sans_regular"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="correo"
                android:textColor="@color/text_dark"
                android:fontFamily="@font/dm_sans_regular"
                android:textSize="15dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="200dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateTint="#EF0C37" />

            <TextView
                android:id="@+id/titleAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:text="Dirección de envio"
                android:textColor="@color/subheadings"
                android:fontFamily="@font/dm_sans_regular"
                android:textSize="18dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:text="Direccion"
                android:textColor="@color/text_dark"
                android:fontFamily="@font/dm_sans_regular"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/edit_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:text="Editar"
                android:textColor="@color/secondary"
                android:fontFamily="@font/dm_sans_regular"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/titleCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:text="Método de pago"
                android:textColor="@color/subheadings"
                android:fontFamily="@font/dm_sans_regular"
                android:textSize="18dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/cardHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:text="Tarjeta"
                android:textColor="@color/text_dark"
                android:fontFamily="@font/dm_sans_regular"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:text="Tarjeta"
                android:textColor="@color/text_dark"
                android:fontFamily="@font/dm_sans_regular"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/edit_payType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:text="Editar"
                android:textColor="@color/secondary"
                android:fontFamily="@font/dm_sans_regular"
                android:textSize="15dp"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/history_btn"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="#E7E4DE" />

    <Button
        android:id="@+id/history_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_logout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/dm_sans_regular"
        android:padding="10dp"
        android:text="Historial"
        android:textColor="#FFFCF7"
        android:textSize="17dp"
        app:backgroundTint="@color/secondary" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/dm_sans_regular"
        android:padding="10dp"
        android:text="Cerrar sesión"
        android:textColor="#FFFCF7"
        android:textSize="17dp"
        app:backgroundTint="@color/secondary"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>