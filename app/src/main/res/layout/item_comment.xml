<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_comment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gracias por tu ayuda"
        android:textColor="@color/secondary"
        android:fontFamily="@font/playfair_display_regular"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Juntos lograremos ser mas precisos para mostrar lo mejor para ti."
        android:fontFamily="@font/dm_sans_regular"
        android:textColor="@color/text_dark"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Puntuación"
        android:textColor="@color/subheadings"
        android:fontFamily="@font/dm_sans_regular"
        android:textSize="18dp" />

    <RatingBar
        android:id="@+id/ratingBarProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"
        android:progressTint="@color/yellow"/>

    <EditText
        android:id="@+id/editTextComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Escribe tu comentario aquí..."
        android:textColor="@color/text_dark"
        android:textColorHint="@color/text_hint"
        android:paddingStart="10dp"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:background="@drawable/bg_edit_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Califica que tanto hicieron match este producto y tu"
        android:textColor="@color/subheadings"
        android:fontFamily="@font/dm_sans_regular"
        android:textSize="18dp" />

    <RatingBar
        android:id="@+id/ratingBarMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"
        android:progressTint="@color/yellow"/>

    <Button
        android:id="@+id/continue_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_register"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/dm_sans_regular"
        android:padding="10dp"
        android:text="Guardar"
        android:textColor="#FFFCF7"
        android:textSize="17dp"
        app:backgroundTint="@color/secondary" />

    <TextView
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/dm_sans_regular"
        android:text="Cancelar"
        android:textAlignment="center"
        android:textColor="@color/secondary"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"/>


</LinearLayout>
