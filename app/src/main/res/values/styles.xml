<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Cambiar el color principal aquí -->
        <item name="colorPrimary">#FF0057</item>
        <!-- Otros atributos del tema -->
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">48dp</item> <!-- Cambia esto según tu preferencia -->
        <item name="android:maxHeight">48dp</item> <!-- Cambia esto según tu preferencia -->
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">#FFFFFF</item>
        <item name="android:popupBackground">@drawable/bg_edit_text</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/selector_chip</item>
        <item name="android:textColor">@color/selector_text_chip</item>
        <item name="checkedIconVisible">false</item>
    </style>

</resources>